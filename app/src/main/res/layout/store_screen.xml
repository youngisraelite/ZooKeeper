<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4EC4ED">

    <TextView
        android:id="@+id/storeTxt"
        android:layout_width="81dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Store"
        android:textColor="#000000"
        android:textSize="30sp" />


    <Button
        android:id="@+id/storeToHomeButton"
        android:layout_width="81dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="663dp"
        android:text="home"
        android:textColor="#000000"
        android:backgroundTint="#F8F0E3"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/purchaseComplete"
        android:layout_width="209dp"
        android:layout_height="41dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="60dp"

        android:gravity="center_horizontal"
        android:text=""
        android:textSize="22sp" />

    <TextView
        android:id="@+id/coinTxt2"
        android:layout_width="81dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="false"
        android:layout_marginStart="145dp"
        android:layout_marginTop="100dp"
        android:background="#00F8F0E3"
        android:text="coins: "
        android:textColor="#000000"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/coinCounter2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="220dp"
        android:layout_marginTop="100dp"
        android:background="#00F8F0E3"
        android:text="0"
        android:textColor="#000000"
        android:textSize="25sp" />

    <Switch
        android:id="@+id/equipPandaSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="520dp"
        android:backgroundTint="#F8F0E3"
        android:textColor="#000000" />

    <Switch
        android:id="@+id/equipNightSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="330dp"
        android:backgroundTint="#F8F0E3"
        android:textColor="#000000" />

    <Switch
        android:id="@+id/equipDaySwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="330dp"
        android:backgroundTint="#F8F0E3"
        android:textColor="#000000" />

    <Switch
        android:id="@+id/equipFox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="520dp"
        android:backgroundTint="#F8F0E3"
        android:textColor="#000000" />


    <Button
        android:id="@+id/unlockFoxBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="510dp"
        android:backgroundTint="#F8F0E3"
        android:text="unlock\n30 Coins"
        android:textColor="#000000" />


    <Button
        android:id="@+id/unlockNightBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="310dp"
        android:backgroundTint="#F8F0E3"
        android:text="unlock\n20 Coins"
        android:textColor="#000000" />

    <ImageView
        android:layout_width="550dp"
        android:layout_height="550dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="290dp"
        android:src="@drawable/panda_home_screen" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/night" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/home_screen_backgroud" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="320dp"
        android:src="@drawable/store_fox" />

    <ImageView
    android:layout_width="250dp"
    android:layout_height="250dp"
    android:layout_marginLeft="200dp"
    android:layout_marginTop="480dp"
    android:src="@drawable/convert_store"
    />
    <Switch
        android:id="@+id/equipConvertSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="650dp"
        android:backgroundTint="#F8F0E3"
        android:textColor="#000000" />

    <Button
        android:id="@+id/unlockConvertBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="630dp"
        android:backgroundTint="#F8F0E3"
        android:text="unlock\n40 Coins"
        android:textColor="#000000" />


    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="420dp"
        android:src="@drawable/taxi_main" />
    <Switch
        android:id="@+id/equipTaxiSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="650dp"
        android:backgroundTint="#F8F0E3"
        android:textColor="#000000" />





</RelativeLayout>